@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EniacSpi</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body id="background">
    <nav class="navbar navbar-default navbar-fixed-top" id="navbar-style">
        <div class="navbar-header"id="navBrand" >
            <a class="navbar-brand"  href="#"><img src="~/Content/Images/EniacLogo.png"/></a>            
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <div class="navbar-left">
                <label id="navTitle">EniacSpi</label>
            </div>
            @if (Request.IsAuthenticated)
            {
            <ul class="nav navbar-nav navbar-right">
                <li>Hello, @User.Identity.GetUserName()!</li>
                <li id="logoffBtn">
                    <a href="@Url.Action("LogOff", "Account")">
                        <span class="glyphicon glyphicon-log-out"></span>
                    </a>
                </li>
            </ul>
            }
        </div>
    </nav>
        <div class="container col-xs-12">
            <div class="sub-container"> 
                @RenderBody()
            </div>            
        </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>