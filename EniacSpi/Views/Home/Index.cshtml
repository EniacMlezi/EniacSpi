
@{
    ViewBag.currentPage = "Home";
    ViewBag.Home = true;
}

<div class="container" id="mainMenu">
    <h2>Main menu</h2>
    <hr />
    <div class="col-xs-3" id="mainLog">
        @foreach (dynamic log in ViewBag.Logs) {
            <div id="log">
                <h1>@log.Title</h1>
                <ul>
                    @foreach (dynamic value in log.Values) {
                        if (@value.Value != "") {
                            <li>@value.Value</li>
                        }
                    }
                </ul>
                <div style="opacity: 0.2; font-size: 12px;">
                    <label style="float:left; padding-left: 20px;">Added by: @log.MadeBy</label>
                    <label style="float:right">Added on: @log.Entered</label>
                </div>
            </div>
        }
    </div>
</div>